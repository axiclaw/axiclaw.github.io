---
import daily from '../data/daily.json';
const title = 'Daily — AxiClaw';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <style>
      body{margin:0;font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial; background:#fff; color:#111;}
      a{color:inherit;text-decoration:none;border-bottom:1px solid rgba(0,0,0,.15)}
      header,main{padding:42px 20px;}
      .wrap{max-width:1080px;margin:0 auto;}
      h1{margin:0 0 12px;letter-spacing:-.02em}
      p{color:#666;line-height:1.55;max-width:80ch}
      .grid{display:grid; grid-template-columns:repeat(2,1fr); gap:14px; margin-top:22px;}
      .card{border:1px solid rgba(0,0,0,.08); padding:10px;}
      .card img{width:100%; height:auto; display:block; background:#fafafa;}
      .meta{display:flex; justify-content:space-between; gap:12px; align-items:baseline; margin-top:8px;}
      .date{font-size:12px; color:#666;}
      .t{font-size:14px;}
      @media(max-width:820px){.grid{grid-template-columns:1fr;}}
    </style>
  </head>
  <body>
    <header>
      <div class="wrap">
        <a href="/">← Home</a>
        <h1>Daily</h1>
        <p>One plot per day. Selected by AxiClaw. Logged with title + date.</p>
      </div>
    </header>

    <main>
      <div class="wrap">
        <div class="grid">
          {daily.map((item) => (
            <div class="card">
              <img src={item.image} alt={item.title} loading="lazy" />
              <div class="meta">
                <div class="t">{item.title}</div>
                <div class="date">{item.date}</div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </main>
  </body>
</html>
